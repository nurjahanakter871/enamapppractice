    </style>


    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- AppCompat Attributes -->
        <!--colorPrimary – The color of the app bar.-->
        <!--<item name="colorPrimary">@color/theme_color</item>
        &lt;!&ndash;colorPrimaryDark – The color of the status bar and contextual app bars; this is normally a dark version of colorPrimary.&ndash;&gt;
        <item name="colorPrimaryDark">@color/theme_color</item>
        &lt;!&ndash;colorAccent – The color of UI controls such as check boxes, radio buttons, and edit text boxes.&ndash;&gt;
        <item name="colorAccent">@color/theme_color</item>-->

        <!--Material Attributes-->
        <!--https://material.io/design/material-theming/implementing-your-theme.html#color-->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="colorSecondary">@color/theme_color</item>
        <item name="colorSecondaryVariant">@color/theme_color</item>
        <!--Require API level 21
        <item name="android:statusBarColor">@color/theme_color</item>-->



        <!--windowBackground – The color of the screen background.-->
        <item name="android:windowBackground">@color/form_background_color</item>
        <!--textColorPrimary – The color of UI text in the app bar.-->
        <item name="android:textColor">@color/text_color</item>
        <!--statusBarColor – The color of the status bar.-->
        <!--navigationBarColor – The color of the navigation bar-->

        <item name="android:colorBackground">@color/form_background_color</item>
        <item name="android:textSize">18sp</item>

        <item name="android:icon">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:typeface">serif</item>
        <!--<item name="android:editTextStyle">@style/customEdit</item>-->
        <item name="android:spinnerStyle">@style/spinner_grayline</item>
        <item name="android:spinnerItemStyle">@style/spinnerItem_grayline</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/icddrb_SpinnerItem</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

