    <!--Tab Layout-->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@assets/font/Roboto-Regular</item>
        <item name="android:fontFamily">@assets/font/Roboto-Regular</item>
    </style>
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimaryVariant</item>
        <item name="colorOnSurface">@color/color_semi_dark_gray</item>
    </style>

    <!--Material Shape Appearance-->
    <style name="ShapeAppearance.App.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
