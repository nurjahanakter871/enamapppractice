<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <solid android:color="@color/spinner_background_color"/>
                <stroke android:width="@dimen/spinner_border_stroke" android:color="@color/spinner_border_color" />
                <corners android:radius="@dimen/spinner_corner_radius" />
                <padding android:right="8dp"
                    android:top="3dp"
                    android:bottom="3dp"
                    android:left="5dp"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center_vertical|right" android:src="@drawable/img_expand_30"
                android:tint="@color/theme_color"/>
        </item>
    </layer-list></item>

</selector>