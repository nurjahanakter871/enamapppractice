<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="@dimen/button_radius"
                android:bottomRightRadius="@dimen/button_radius"
                android:topLeftRadius="@dimen/button_radius"
                android:topRightRadius="@dimen/button_radius" />
            <gradient android:angle="270" android:startColor="@color/theme_color" android:endColor="@color/theme_color" android:type="linear" />
        </shape>
        <color android:color="#FFFFFF" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners 
                android:bottomLeftRadius="@dimen/button_radius"
                android:bottomRightRadius="@dimen/button_radius"
                android:topLeftRadius="@dimen/button_radius"
                android:topRightRadius="@dimen/button_radius" />
            <gradient android:angle="270" android:startColor="#FAAC58" android:endColor="#FAAC58" android:type="linear" />
            <stroke android:color="#69CB3F" android:width="@dimen/button_line_width"/>
        </shape>
    </item>
</selector>