<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/control_border_color"/>
        </shape>
        <color android:color="#69CB3F" />
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<corners
                android:bottomLeftRadius="0.5dp"
                android:bottomRightRadius="0.5dp"
                android:topLeftRadius="0.5dp"
                android:topRightRadius="0.5dp" />

            -->
            <solid android:color="@color/control_back_color"/>
            <stroke android:color="@color/control_border_color" android:width="@dimen/button_line_width"/>
        </shape>
        <color android:color="#69CB3F" />
    </item>
</selector>